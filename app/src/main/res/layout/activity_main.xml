<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bck_res"
    android:layout_height="match_parent"
    tools:context="com.example.sophie.settlers.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">
        <CheckBox
            style="@style/CheckBox" />
        <CheckBox
            style="@style/CheckBox" />
        <CheckBox
            style="@style/CheckBox" />
        <CheckBox
            style="@style/CheckBox" />
        <CheckBox
            style="@style/CheckBox" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <EditText
                android:text="Marek"
                style="@style/EditText" />
            <TextView
                android:background="@color/Marek"
                android:id="@+id/MarekScore"
               style="@style/ScoreView" />
            <Button
                android:onClick="addOneMarek"
                android:text="@string/pl1"
                style="@style/Buttons" />
            <Button
                android:onClick="addTwoMarek"
                android:text="@string/pl2"
                style="@style/Buttons" />
            <Button
                android:onClick="minusOneMarek"
                android:text="@string/mi1"
                style="@style/Buttons" />
            <Button
                android:onClick="resetMarek"
                android:text="@string/reset"
                style="@style/Buttons" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <EditText
                android:text="Sophie"
                style="@style/EditText" />
            <TextView
                android:background="@color/Sophie"
                android:id="@+id/SophieScore"
                style="@style/ScoreView" />
            <Button
                android:onClick="addOneSophie"
                android:text="@string/pl1"
                style="@style/Buttons" />
            <Button
                android:onClick="addTwoSophie"
                android:text="@string/pl2"
                style="@style/Buttons" />
            <Button
                android:onClick="minusOneSophie"
                android:text="@string/mi1"
                style="@style/Buttons" />
            <Button
                android:onClick="resetSophie"
                android:text="@string/reset"
                style="@style/Buttons" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
